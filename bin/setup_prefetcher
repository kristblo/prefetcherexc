#!/bin/bash

SCRIPT_DIR=$(readlink -f "$(dirname $0)/..")

[ $# -eq 0 ] && {
	target=$(readlink -f "./")
} || {
	target=$(readlink -f "$1")
}

[ -f "$target"/src/prefetcher.cc ] && {
	echo "Existing prefetcher '$1/src/prefetcher.cc' found!" >&2
	exit 1
}

[ -f "$target" ] && {
	echo "Target '$1' must be a directory!" >&2
	exit 1
}

[ ! -d "$target" ] && {
	mkdir -p "$target" 
}

cp -rv ${SCRIPT_DIR}/prefetcher/* "$target"/ && {
	echo "PREFETCHER_FRAMEWORK=${SCRIPT_DIR}" > "$target"/scripts/FRAMEWORK
	echo "Prefetcher setup complete under '$target/"
	exit 0
} || {
	echo "Canceled!" >&2
	exit 1
}
